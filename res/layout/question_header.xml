<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/question_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|left" />

    <TextView
        android:id="@+id/question_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_title"
        />

    <TextView
        android:id="@+id/comments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/question_body"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/question_answers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comments"
        android:textSize="10dip" />

    <Button
        android:id="@+id/gotoQuestionProfileButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_answers"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:focusable="false"
        android:text="@string/comments_button" />

</RelativeLayout>